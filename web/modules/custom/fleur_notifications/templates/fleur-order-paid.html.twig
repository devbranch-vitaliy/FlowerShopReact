{#
/**
 * @file
 * Template for the order placed.
 *
 * Available variables:
 * - order_entity: The order entity.
 *
 * @ingroup themeable
 */
#}
<table style="margin: 15px auto 0 auto; max-width: 768px; font-family: arial,sans-serif">
  <tbody>
  <tr>
    <td>
      <table style="margin-left: auto; margin-right: auto; max-width: 768px; text-align: center;">
        <tbody>
        <tr>
          <td>
            <a href="{{ url('<front>') }}" style="color: #0e69be; text-decoration: none; font-weight: bold; margin-top: 15px;">{{ order_entity.getStore.label }}</a>
          </td>
        </tr>
        </tbody>
      </table>
      <table style="text-align: left; min-width: 450px; margin: 5px auto 0 auto; border: 1px solid #cccccc; border-radius: 5px; padding: 40px 30px 30px 30px;">
        <tbody>
        <tr>
          <td style="font-weight: bold; padding-top:15px; padding-bottom: 15px; text-align: left; border-top: 1px solid #cccccc; border-bottom: 1px solid #cccccc">
            {{ 'We have received you payment made towards your order #@number placed on @date - thank you!'|t({'@number': order_entity.id, '@date': order_entity.getPlacedTime|date("m/d/Y")}) }}
          </td>
        </tr>
        <tr>
          <td>
            {{ 'Your order is being prepared by our team of professional floral designers to ensure only the best quality flowers and design gets delivered.'|t }}
          </td>
        </tr>
        <tr>
          <td>
            {{ 'Regards'|t }}<br>
            {{ 'Palette de Fleurs Floral design team'|t }}
          </td>
        </tr>
        <tr>
          <td>
            {{ 'For queries, call 021 4218258'|t }}
          </td>
        </tr>
        </tbody>
      </table>
    </td>
  </tr>
  </tbody>
</table>
