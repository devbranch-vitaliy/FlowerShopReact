{#
/**
 * @file
 * Default theme implementation for the completion message.
 *
 * Available variables:
 * - order_entity: The order entity.
 * - payment_instructions: The payment instructions, if provided.
 *
 * @ingroup themeable
 */
#}
{% set title = 'Your order is complete'|t %}
{% set description_line1 = 'Thank you for your order. Your order number is @number.'|t({'@number': order_entity.getOrderNumber}) %}
{% set description_line2 = 'You will receive an e-mail confirmation of this order shortly.'|t %}
<div class="checkout-complete">
  <div class="title">
    <h1 class="text-color-black hidden-xs">{{ title }}</h1>
    <h2 class="text-color-black visible-xs">{{ title }}</h2>
  </div>
  <div class="description">
    <div class="text-color-black leading-text hidden-xs ">{{ description_line1 }}</div>
    <div class="text-color-black body-text visible-xs">{{ description_line1 }}</div>
    <div class="text-color-black leading-text hidden-xs ">{{ description_line2 }}</div>
    <div class="text-color-black body-text visible-xs">{{ description_line2 }}</div>
  </div>

  {% if payment_instructions %}
    <div class="checkout-complete__payment-instructions">
      <h2>{{ 'Payment instructions'|t }}</h2>
      {{ payment_instructions }}
    </div>
  {% endif %}
</div>
