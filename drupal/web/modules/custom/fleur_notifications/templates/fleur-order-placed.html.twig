        <tr>
          <td>
            {{ 'Thank you for placing you order with Palette de Fleur. We will send you a payment confirmation (via email or SMS) when payment is made'|t }}
          </td>
        </tr>
        <tr>
          <td>
            {{ 'Regards'|t }}<br>
            {{ 'Palette de Fleurs Floral design team'|t }}
          </td>
        </tr>
        <tr>
          <td>
            {{ 'For queries, call 021 4218258'|t }}
          </td>
        </tr>
        </tbody>
      </table>
    </td>
  </tr>
  </tbody>
</table>
